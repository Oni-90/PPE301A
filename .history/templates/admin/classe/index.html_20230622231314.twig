{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    <h1>Classe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.id }}</td>
                <td>{{ classe.code }}</td>
                <td>{{ classe.libelle }}</td>
                <td>
                    <a href="{{ path('admin_classe_show', {'id': classe.id}) }}">show</a>
                    <a href="{{ path('admin_classe_modifier', {'id': classe.id}) }}">edit</a>
                    {{ include('admin/salle/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_classe_ajouter') }}">Create new</a>
{% endblock %}
