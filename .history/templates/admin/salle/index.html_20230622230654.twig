{% extends 'base.html.twig' %}

{% block title %}Salle index{% endblock %}

{% block body %}
    <h1>Salle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.id }}</td>
                <td>{{ salle.code }}</td>
                <td>{{ salle.libelle }}</td>
                <td>
                    <a type="button" href="{{ path('admin_salle_show', {'id': salle.id}) }}">afficher</a>
                    <a type="button" href="{{ path('admin_salle_modifier', {'id': salle.id}) }}">edit</a>
                    {{ include('admin/salle/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_salle_ajouter') }}">Create new</a>
{% endblock %}
