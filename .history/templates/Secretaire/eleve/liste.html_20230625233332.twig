{% extends "base.html.twig" %}

{% block body %}
<section class="content patients">
    <div class="container-fluid">
        <div class="block-header">
            <div class="d-sm-flex justify-content-between">
                <div>
                    <h2>All Student</h2>
                    <small class="text-muted">Welcome to Swift application</small>
                </div>
                <div>
                    <a href="{{ path('secretaire_eleve_ajouter') }}" class="btn btn-raised btn-primary">Ajouter un Eleve</a>
                </div>
            </div>
        </div>
        <form action="{{ path('secretaire_eleve_listetrier') }}" method="get"style="margin-bottom:30px ;margin-left:30%">
            <label for="classe">Classe :</label>
            <select name="classe" id="classe" style="border-radius: 20px; height:50px; ">
                <option value=""> classes</option>
                {% for classe in classes %}
                    <option value="{{ classe.id }}" {% if classeSelectionnee and classeSelectionnee.id == classe.id %}selected{% endif %}>{{ classe.libelle }}</option>
                {% endfor %}
            </select>
        
            <label for="annee">Année  :</label>
            <select name="annee" id="annee" style="border-radius: 20px; height:50px;">
                <option value="">années</option>
                {% for annee in annees %}
                    <option value="{{ annee.id }}" {% if anneeSelectionnee and anneeSelectionnee.id == annee.id %}selected{% endif %}>{{ annee.code }}</option>
                {% endfor %}
            </select>
        
            <button type="submit" class="btn btn-primary" style="border-radius: 20px; height:50px;"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" style="color:white;" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
              </svg></button>
        </form>
        {% if eleves is not empty %}
        {{ form_start(form) }}
                    <div class="d-flex">
                        {{ form_row(form.recherche) }}
                        <button type="submit" class="btn btn-primary" style="border-radius: 20px; height:50px; margin-bottom: 200px;" style=""><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" style="color:white;" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                          </svg></button>
                    </div>    
                        
                    </div>
                </div>
        {{ form_end(form) }}
        
        
        <div class="row clearfix" style="margin-top:20px ;">
           
            
                {% for eleve in eleves %}
                    
            
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card all-patients">
                        <div class="body">
                            <div class="row">
                                <div class="col-lg-4 col-md-12 m-b-0">
                                    <a href="#" class="p-profile-pix"><img style="height: 150px; width: 150px;" src="{{ asset('images/users/') ~ eleve.imageName  }}" alt="user" class="img-thumbnail img-fluid"></a>
                                </div>
                                <div class="col-lg-8 col-md-12 m-b-0">
                                    <h5 class="m-b-0">{{ eleve.nom }} - {{ eleve.nom }} <a href="#" class="edit"><i class="zmdi zmdi-edit"></i></a></h5> <small>MCA Sem-5</small>
                                    <address class="m-t-10 m-b-0">
                                        {{ eleve.classe.libelle }}<br>
                                        <abbr title="Phone">P:</abbr> {{ eleve.numero }}
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            {% else %}
                <p>Aucun eleve trouver</p>
            {% endif %}    
            
            </div>
        </div>
    </div>
</section>


{% endblock %}