{% extends 'base.html.twig' %}

{% block title %}Eleve{% endblock %}

{% block body %}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Tout Les  Directeurs</h2>
            <small>Taken from <a href="https://datatables.net/" target="_blank">datatables.net</a></small>
        </div>
        
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2> Directeur </h2>
                        <ul class="header-dropdown">
                            <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <a type="button" href="{{ path('admin_directeur_ajouter') }}" class="btn btn-raised btn-primary waves-effect" style="margin-left:80%">+Ajouter un Directeur</a>
                    
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                            <tbody>

                            
                                <tr>
                                    <th>Profil</th>
                                    <td><td><img class="bd-placeholder-img rounded-circle" src="{{ asset('images/users/') ~ eleve.imageName  }}" width="150" height="150" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="var(--bs-secondary-color)"/></img></td></td>
                                </tr>
                                <tr>
                                    <th>Annee Inscription</th>
                                    <td>{{ eleve.anne.code }}</td>
                                </tr>
                                <tr>
                                    <th>Classe</th>
                                    <td>{{ eleve.classe.libelle }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ eleve.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ eleve.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ eleve.email }}</td>
                                </tr>
                                <tr>
                                    <th>UserName</th>
                                    <td>{{ eleve.username }}</td>
                                </tr>
                                <tr>
                                    <th>Eleve.password</th>
                                    <td>{{ eleve.security }}</td>
                                </tr>
                                <tr>
                                    <th>Fonction</th>
                                    <td><button class="btn bg-orange waves-effect" type="button">{{ eleve.fonction }} </td> 
                                </tr>
                                <tr>
                                    <th>Date Naissance</th>
                                    <td>{{ eleve.dateNaissance|date('d-m-Y') }}</td>
                                </tr>
                                <tr>
                                    <th>Lieu Naissance</th>
                                    <td>{{ eleve.LieuNaissance}}</td>
                                </tr>
                                <tr>
                                    <th>Adress</th>
                                    <td>{{ eleve.adress }}</td>
                                </tr>
                                <tr>
                                    <th>Sexe</th>
                                    <td>{{ eleve.sexe }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ eleve.description }}</td>
                                </tr>
                                
                            </tbody>
                        </table>
                        <div style="display: flex;">
                            <a class="btn btn-default" href="{{ path('secretaire_eleve_liste') }}">cancel</a>

                            <a class="btn btn-secondary" style="margin-left:20; margin-right:20px"  href="" svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                            </svg></a>

                            {{ include('secretaire/anne/_delete_form.html.twig') }}
                        </div>

                        
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table --> 
    </div>
</section>  
{% endblock %}
