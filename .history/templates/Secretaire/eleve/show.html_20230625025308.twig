{% extends 'base.html.twig' %}

{% block title %}Eleve{% endblock %}

{% block body %}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>Tout Les  Directeurs</h2>
            <small>Taken from <a href="https://datatables.net/" target="_blank">datatables.net</a></small>
        </div>
        
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2> Directeur </h2>
                        <ul class="header-dropdown">
                            <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <a type="button" href="{{ path('admin_directeur_ajouter') }}" class="btn btn-raised btn-primary waves-effect" style="margin-left:80%">+Ajouter un Directeur</a>
                    
                    <div class="body table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                            <tbody>

                            
                                <tr>
                                    <th>Profil</th>
                                    <td><td><img class="bd-placeholder-img rounded-circle" src="{{ asset('images/users/') ~ eleve.imageName  }}" width="150" height="150" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="var(--bs-secondary-color)"/></img></td></td>
                                </tr>
                                <tr>
                                    <th>Annee Inscription</th>
                                    <td>{{ eleve.annee.code }}</td>
                                </tr>
                                <tr>
                                    <th>Classe</th>
                                    <td>{{ eleve.classe }}</td>
                                </tr>
                                <tr>
                                    <th>Nom</th>
                                    <td>{{ eleve.nom }}</td>
                                </tr>
                                <tr>
                                    <th>Prenom</th>
                                    <td>{{ eleve.prenom }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ eleve.email }}</td>
                                </tr>
                                <tr>
                                    <th>UserName</th>
                                    <td>{{ eleve.username }}</td>
                                </tr>
                                <tr>
                                    <th>Eleve.password</th>
                                    <td>{{ eleve.security }}</td>
                                </tr>
                                <tr>
                                    <th>Fonction</th>
                                    <td><button class="btn bg-orange waves-effect" type="button">{{ eleve.fonction }} </td> 
                                </tr>
                                <tr>
                                    <th>Date Naissance</th>
                                    <td>{{ eleve.dateNaissance|date('d-m-Y') }}</td>
                                </tr>
                                <tr>
                                    <th>Lieu Naissance</th>
                                    <td>{{ eleve.Lieu Naissance}}</td>
                                </tr>
                                <tr>
                                    <th>Adress</th>
                                    <td>{{ eleve.adress }}</td>
                                </tr>
                                <tr>
                                    <th>Sexe</th>
                                    <td>{{ eleve.sexe }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ eleve.description }}</td>
                                </tr>
                                
                            </tbody>
                        </table>

                        <a href="{{ path('app_eleve_index') }}">cancel</a>

                        <a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}">modifier</a>

                        {{ include('eleve/_delete_form.html.twig') }}

                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Exportable Table --> 
    </div>
</section>  
{% endblock %}
