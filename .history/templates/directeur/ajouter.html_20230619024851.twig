                        </li>
                    </ul>
                </div>
               
                                    <a href="{{ path('directeur_list') }}" class="btn btn-warning">Liste Des Directeurs</a>
                                    {{ form_start(form, {'attr':{'class':'body'}})}}

                                    <div class="row clearfix">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    {{ form_row(form.nom, {'attr':{type:"text"  ,'class':"form-control" ,'placeholder':"nom" , 'require':""}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    {{ form_row(form.prenom, {'attr':{'class':"form-control" ,'placeholder':"prenom" ,'require':"", 'label':'Prenom*'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    {{ form_row(form.email, {'attr':{'class':"form-control", 'placeholder':"exemple@gmail.com", 'require':"", 'label':'Email*'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    {{ form_row(form.numero, {'attr':{'class':"form-control", 'placeholder':"numero", 'require':"", 'label':'Numero*'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>   
                                    <div class="row clearfix">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    {{ form_row(form.dateNaissance, {'attr':{'class':'form-control datepicker', 'require':"", 'label':'Date Naissance*'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    {{ form_row(form.lieuNaissance, {'attr':{'class':"form-control", 'placeholder':"Lieu Naisance", 'require':"", 'label':'Lieu Naissance*'}}) }}
                                                </div>
                                            </div>
                                        </div>
                                        
                                        </div>
                                        
                                             
                                             
                                        
                                            
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.diplome, {'attr':{'class':"form-select" , 'require':"", 'label':'Diplome*'}}) }}
                                                </div>
                                            </div>   
                                       
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.Domaine, {'attr':{'class':"form-control" ,'placeholder':"domaine", 'require':"", 'label':'Domaine*'}}) }}
                                                </div>
                                            </div>   
                                        
                                            <div class="col-lg-6 mb-4">
                                                <div class="form-group">
                                                    {{ form_row(form.Description, {'attr':{'class':"form-control", 'placeholder':"Description", 'require':"", 'label':'Description*'}}) }}
                                                </div>
                                            </div>   
                                        </div>  
                                        <center><button type="submit" class="btn btn-primary">Ajouter</button></center>
                                    {{ form_end(form) }}
                                </div>
                            </div>
